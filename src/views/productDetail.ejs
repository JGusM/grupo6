     <section>
        <article class="product-container">

                   
            <div class="product-image-description-container">
                <img src="/images/products/<%= product.image %>" alt="" class="product-img">
               
                <div class="product-description-cantindad-container">
                    
                    <h1 id="productName" class="product-h1"><%=product.name%></h1>
