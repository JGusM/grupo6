<!-- -------------- HEAD -----------------------  -->
<%- include('./partials/head')%>
 
 
 
<body>
    <!-- -------------- HEADER -------------------  -->
        <%- include('./partials/header')%>


    
<!-- -------------- MAIN  --------------------------  -->
    <main class="main-container-login">
     <section>

        <form class="login-container" action="/users/login" method="POST">

             <!-- ----TÍTULO----  -->
            <div class="login-title">
                 <h1 class="login-h1"> <i class="fas fa-user"></i></i></i>&nbsp&nbspLOGIN </h1>
            </div>
        
            <div class="errores">
                <ul></ul>
            </div>

            <% if (locals.errors) { %>
                <ul class="errores">
                    <li><%= errors.password%></li>
                </ul>
                <% } %>
            <!-- ----EMAIL----  -->
            <div class="login-cajas-input">
                 <input type="email" name="email" class="email" placeholder="✉ Ingresá tu email" >
            </div>

            <!-- ----CONTRASEÑA----  -->

            <div class="login-cajas-input">
                 <input type="password" name="password" class="password" placeholder="🔓 Ingresá contraseña" >
            </div>

   
             <!-- ----RECORDARME----  -->
            <div class="login-recordarme-div">
                <label> <input class="login-checkbox" type="checkbox" name="recordarme" value="recordarme">&nbsp&nbsp¿Recordarme?</label>
            </div>

            <!-- ----BOTÓN "REGISTRAR"----  -->
            <button type="submit" class="login-button">Ingresar</button>

            <!-- ----¿YA TENÉS UNA CUENTA?----  -->
            <div class="go-register-div">
                <p class="already-an-account">¿Nuevo Usuario?</p>
                <a href="http://localhost:3001/users/register"><p class="go-register"> &nbsp Crear Cuenta</p></a>
            </div>

        </form>

     </section>   
    </main>
    
    <!-- -------------- FOOTER ------------------  -->

    <%- include('./partials/footer')%>
    <!-- ----------------------------------------- -->

    
</body>
</html>
